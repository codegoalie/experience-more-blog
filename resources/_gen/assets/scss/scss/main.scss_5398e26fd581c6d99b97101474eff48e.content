html{font-size:62.5%}body{background:#fff;font-size:1.4rem;font-family:montserrat,sans-serif}h1,h2,h3,h4,h5{font-weight:400}h1{font-size:5rem}h2{font-size:4rem}h3{font-size:3rem}section.hero{width:100vw;height:80vh;background:linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)),url("/img/west-side-market.jpg") top center/cover;color:#fff;padding:2rem}section.hero .insta{float:right;font-size:3rem;width:5rem;right:4rem;position:relative}section.hero .insta a{color:#fff}section.hero .insta a:hover{color:#097500}section.hero .brand img{height:5rem;width:5rem;display:inline;vertical-align:middle}section.hero .brand .name{display:inline;vertical-align:middle}section.hero .main-content{display:flex;height:100%;align-items:center;justify-content:center;font-family:shadows into light two,cursive}section.hero .main-content h1{letter-spacing:5px;text-shadow:1px 1px 4px}section.posts{margin:0 2rem}section.posts .post-card{margin:5rem auto 0;max-width:1000px;border-radius:5px;border:1px solid #c3c3c3;box-shadow:2px 2px 4px 2px rgba(0,0,0,.25);display:flex;color:#000;text-decoration:none;transition:all .225s ease-in-out;min-height:25rem;font-size:1.6rem}section.posts .post-card:hover{box-shadow:2px 2px 6px 4px rgba(0,0,0,.25)}section.posts .post-card .summary-image{width:50%;border-top-left-radius:5px;border-bottom-left-radius:5px;flex-shrink:0}section.posts .post-card .content{padding:1rem 2rem}section.posts .post-card .content .title{margin:0;margin-bottom:0;margin:0}section.posts .post-card .content .event-dates{margin-top:.5rem;font-size:1.8rem;color:#097500;margin:.75rem 0 0}section.posts .post-card .content .author{font-style:italic;font-weight:100;margin:.75rem 0 0}section.posts .post-card .content .summary{line-height:2.5rem;margin:1.25rem 0 0}footer.footer{margin-top:5rem;text-align:center}